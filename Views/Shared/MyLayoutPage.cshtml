<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:mintcream">
     
        <!-- Header -->
        <header>
            <h1 style="text-align:center; color:mintcream; font-size:50px;">UCL Management</h1>
        </header>
        <!-- End of Header -->
        <!-- Left Sidebar -->
        
        <nav>
            <h2 style="color:mintcream">Navigation</h2>
            <b>@Html.ActionLink("About", "About")</b><br />
            <b>@Html.ActionLink("Contact", "Contact")</b><br />
            <b>@Html.ActionLink("Teachers", "Teachers")</b><br />
            <b>@Html.ActionLink("Students", "Students")</b><br />
            <b>@Html.ActionLink("Courses", "Courses")</b><br />
            <b>@Html.ActionLink("Subjects", "Subjects")</b><br />
            <b>@Html.ActionLink("Grades", "Grades")</b><br />
        </nav>
        
        <!-- End of Left Sidebar -->
        <!-- Content Body -->
        <div class="content">
            @RenderBody()
        </div>
        <!-- End of Content Body -->
        <!-- Footer -->
        <!--<footer>
            <h4></h4>
        </footer>-->

        <!-- Style -->
        <style>
            header {
                height: 100px;
                width: 100%;
                background-color: darkseagreen;
            }

            nav {
                float: left;
                width: 200px;
                height: 250px;
                background-color: darkseagreen;
                text-decoration:none;
                color:black;
                
            }

            .content {
                background-color: mintcream;
                padding: 20px;
            }

           /* footer {
                background-color: darksalmon;
                width: 100%;
                height: 50px;
                float: right;
                text-align: center;
            }*/
            #listarTabelas {
                width: 100%;
                border-collapse: collapse;
                margin-left:0px;
            }

            #listarTabelas td, #listarTabelas th {
                    border: 1px solid #ddd;
                    padding: 5px;
                    text-align: center;
                    
                }

            #listarTabelas th {
                    background-color: burlywood;
                    color: black;
                }

            #listarTabelas tr:hover {
                    background-color: moccasin;
                }
            h1{
                    text-align:justify;
                }
            .buttonEli {
                background-color: firebrick;
                color: white;
                width: 100px;
                padding: 5px;
            }

            .buttonEli:hover {
                    background-color: white;
                    color: firebrick;
             }

            .buttonAlt {
                background-color: green;
                color: white;
                width: 100px;
                padding: 5px;
            }

            .buttonAlt:hover {
                    background-color: white;
                    color: green;
             }
            .escolha {
                position: relative;
                display: inline-block;
            }

            .escolha2 {
                display: none;
                position: absolute;
                background-color: lightsteelblue;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
            }

           .escolha2 a {
                    color: darkblue;
                    padding: 12px;
                    text-decoration: none;
                    display: block;
                }

           .escolha2 a:hover {
                        background-color: whitesmoke;
                    }

           .escolha:hover .escolha2 {
                display: block;
            }

           .escolha:hover .botoes {
                background-color: lightsteelblue;
            }
        </style>
</body>
</html>
